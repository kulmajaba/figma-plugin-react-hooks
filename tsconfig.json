{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "jsx": "react-jsx",
    "types": ["@figma/plugin-typings"],
    "outDir": "lib",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noErrorTruncation": false
  },
  "typedocOptions": {
    "entryPoints": ["src/types.ts"],
    "out": "docs-temp",
    "plugin": ["typedoc-plugin-markdown"],
    "disableSources": true,
    "excludeInternal": true,
    "hideInPageTOC": true,
    "hideBreadcrumbs": true,
    "readme": "none",
    "sort": ["source-order"],
    "entryDocument": "types.md"
  }
}
